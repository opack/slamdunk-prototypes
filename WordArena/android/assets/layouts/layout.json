{
	"widgets": [
		{
			"class": "Label",
			"name": "title",
			"text-key": "label-title",
			"width-key": "screen-width",
			"y": 700
		},
		{
			"class": "Table",
			"name": "form",
			"fill-parent": "true",
			"debug": "false",
			"rows": [
				{
					"pad-tlbr": [0, 0, 10, 0],
					"cells": [
						{
							"align": "left",
							"widget": {
								"class": "Label",
								"name": "label-username",
								"text-key": "label-username"
							},
						},
						{
							"expand-xy": ["true", "false"],
							"fill-xy": ["true", "false"],
							"widget": {
								"class": "TextField",
								"name": "txt-username",
								"text": "Entrez votre nom d'utilisateur"
							}
						}
					]
				},
				{
					"cells": [
						{
							"align": "left",
							"widget": {
								"class": "Label",
								"name": "label-password",
								"text-key": "label-password"
							},
						},
						{
							"expand-xy": ["true", "false"],
							"fill-xy": ["true", "false"],
							"widget": {
								"class": "TextField",
								"name": "txt-password",
								"text-key": "txt-password"
							}
						}
					]
				},
				{
					"cells": [
						{
							"colspan": 2,
							"widget": {
								"class": "TextButton",
								"name": "connect",
								"text-key": "btn-connect"
							},
						}
					]
				}
			]
		}
	],
	"values": {
		"label-title": {
			"fr": "Entrez vos identifiants",
			"en": "Input your credentials"
		},
		"label-username": {
			"fr": "Utilisateur : ",
			"en": "Username : "
		},
		"label-password": {
			"fr": "Mot de passe : ",
			"en": "Password : "
		},
		"txt-password": {
			"fr": "Saisissez votre mot de passe",
			"en": "Input your password"
		},
		"btn-connect": {
			"fr": "Connexion",
			"en": "Login"
		},
		"width-key": 480
	}
}
