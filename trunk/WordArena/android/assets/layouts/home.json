{
	widgets: [
		{
			class: Table,
			name: table-buttons,
			fill-parent: true,
			defaults: {
				pad-tlbr: [0, 0, 10, 0],
				fill-xy: [0.75, 0.25],
				expand-xy: [true, true]
			},
			COMMENTED-columnDefaults: {
				comment: "Cette propriété correspond à la méthode Table.columnDefaults(). A décommenter pour rendre active.",
				1: {
					width: 200
				}
			},
			rows: [
				{
					cells: [
						{
							widget: {
								class: TextButton,
								name: play,
								text-key: btn-play
							}
						}
					]
				},
				{
					cells: [
						{
							widget: {
								class: TextButton,
								name: quit,
								text-key: btn-quit
							}
						}
					]
				}
			]
		}
	],
	values: {
		btn-play: {
			en: "Play",
			fr: "Jouer"
		},
		btn-quit: {
			en: "Quit",
			fr: "Quitter"
		}
	}
}